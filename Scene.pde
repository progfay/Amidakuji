/**
 * Scene class is super class of any Scenes.
 * 
 * This class has all methods of pre-defined methods by Processing.
 * You can make Scenes by extending this class.
 * And you override setup(), draw(), and Event methods,
 * executed in the scene as default Processing.
 */
abstract class Scene {
  
  void setup() {
  }


  void draw() {
  }


  void mouseClicked() {
  }


  void mouseDragged() {
  }


  void mouseEntered() {
  }


  void mouseExited() {
  }


  void mouseMoved() {
  }


  void mousePressed() {
  }


  void mouseReleased() {
  }


  void mouseWheel() {
  }


  void keyPressed() {
  }


  void keyReleased() {
  }


  void keyTyped() {
  }
}
